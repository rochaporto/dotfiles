CanonicalDomains cern.ch
CanonicalizeHostname yes
ServerAliveInterval 30

Host *.cern.ch !lxplus*.cern.ch !aiadm*.cern.ch !lxplus* !aiadm* !gitlab* !ciadm801*
    User rbritoda
    GSSAPIDelegateCredentials yes

Match host *.cern.ch,!lxplus*.cern.ch,!aiadm*.cern.ch,!lxplus*,!aiadm*,!gitlab* !exec "nmcli connection show --active | grep CERN"
    ProxyJump lxplus8.cern.ch

Host lxplus*.cern.ch lxplus*
    User rbritoda
    GSSAPIDelegateCredentials yes
    GSSAPIAuthentication yes
    GSSAPITrustDns yes

Match host lxplus8.cern.ch,lxplus8 !exec "nmcli connection show --active | grep CERN"
    ControlPath ~/.ssh/controlmasters/%r@%h:%p
    ControlMaster auto
    ControlPersist 10m
    DynamicForward 8011
    ExitOnForwardFailure no

Host ciadm801 ciadm801.cern.ch
    HostName ciadm801.cern.ch
    User rbritoda
    ControlPath ~/.ssh/controlmasters/%r@%h:%p
    ControlMaster auto
    ControlPersist 10m
    GSSAPIAuthentication yes
    GSSAPIDelegateCredentials yes
    GSSAPITrustDns yes
    DynamicForward 8012
    ExitOnForwardFailure no
