#!/usr/bin/perl -w

use strict;
use IO::All;
use LWP::UserAgent;
use Getopt::Long qw(GetOptions);
#use Gtk2::Notify;
my %opt;
GetOptions(\%opt, 'public|p');

my $url = 'http://paste.wgtn.cat-it.co.nz/';
$url = 'http://paste.dollyfish.net.nz/' if $opt{public};

my $response = LWP::UserAgent->new->post($url, [ 'text', scalar(`xclip -o`) ]);
$response->header('location') > io '| xclip -i' if $response->header('location');
#system('xte', 'mouseclick 2');
