[global_config]
  scroll_tabbar = True
  homogeneous_tabbar = False
[keybindings]
  next_tab = <Primary>0
  prev_tab = <Primary>1
[profiles]
  [[default]]
    icon_bell = False
    cursor_blink = False
    cursor_color = "#aaaaaa"
    font = Monospace 11
    show_titlebar = False
    scrollbar_position = hidden
    scrollback_lines = 5000
    scrollback_infinite = True
    use_system_font = False
    copy_on_selection = True
[layouts]
  [[default]]
    [[[window0]]]
      type = Window
      parent = ""
    [[[child1]]]
      type = Terminal
      parent = window0
      profile = default
[plugins]
