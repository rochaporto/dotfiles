set folder=imaps://rbritoda@imap.cern.ch
set imap_authenticators="gssapi:login"
set imap_check_subscribed=yes
set spoolfile=+INBOX

set realname = "Ricardo Rocha"
set from='ricardo.rocha@cern.ch'
set envelope_from=yes

set sendmail="~/bin/msmtp/bin/msmtp --account=cern"

# address providers
set query_command="~/.mutt/address-providers/mutt_ldap '%s'"

# default folders
set record="=Sent"
set postponed="=Drafts"

# caching
set header_cache=~/.mutt/headercache
set message_cachedir=~/.mutt/messagecache

# speed optimization
set sleep_time=0
set mail_check=60

# usability
set pager_index_lines=20
set sort = threads
set editor="vim +/^$ ++1"
set autoedit
set edit_headers
set smart_wrap

# html email
auto_view text/html

# pager settings
ignore *
unignore From To Reply-To Subject Cc
bind pager <up> previous-line
bind pager <down> next-line

# gnupg
source ~/.mutt/gpg.rc
set pgp_autosign
set pgp_use_gpg_agent=yes
set pgp_sign_as="0x5453F6BE"
set pgp_verify_sig=yes
set pgp_timeout=5

# sidebar
sidebar_whitelist imaps://rbritoda@imap.cern.ch/INBOX
set sidebar_visible
set sidebar_short_path
set sidebar_folder_indent
set sidebar_indent_string=" "
set sidebar_new_mail_only
set sidebar_format="%B%?F? [%F]?%* %N"
set sidebar_sort_method="path"
set mail_check_stats
bind index,pager <C-Up> sidebar-prev
bind index,pager <C-Down> sidebar-next
bind index,pager \CO sidebar-open
macro index,pager B '<enter-command>toggle sidebar_visible<enter>'

# archiving
macro index,pager a "<save-message>=Archives/2017<enter><enter>" "Archive"

# colors
source ~/.mutt/colors-solarized-light-16.rc
